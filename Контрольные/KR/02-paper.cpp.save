#include <stdio.h>

int main()
{
    int M = 0, N = 0, a[10000] = {0}, h = 0;

    scanf("%d %d", &M, &N);

    for(int i = 0; i < N; i++)
    {
        scanf("%d", &a[i]);
    }

    for(int i = 0; i < N; i++)
    {
        if(a[i] >= i + 1)
        {
            h++;
        }
        else
        {
            if(M >= i + 1 - a[i])
            {
                M = M - (i + 1 - a[i]);
                h++;
            }
        }
    }

    printf("%d", h);
}

